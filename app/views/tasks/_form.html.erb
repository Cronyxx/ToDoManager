<div class = 'col-md-8 offset-2'>
  <h1 class = "text-center">New Task</h1>
  <%= simple_form_for @task, url: tasks_path do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :tag_ids, as: :select, collection: Tag.order(:name), label_method: :name, input_html: {multiple: true} %>
    <%= f.input :dead_line, label: "Dead Line", as: :date, start_year: Date.today.year, end_year: Date.today.year + 4 %>
    <%= f.submit "Create", class: 'btn btn-lg btn-primary float-right' %>
    <%= link_to 'Back', root_path, class: 'btn btn-lg btn-primary float-left' %>
  <% end %>
</div>