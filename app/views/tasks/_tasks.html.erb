<% @tasks.each do |task| %>
	<div class="panel panel-default">
  		<div class="panel-heading">
  			<h3>
  			<%= link_to task.title, task_path(task) %>
  			<%= link_to complete_task_path(task.id), method: :patch do %>
            	<i class="fa fa-check" aria-hidden="true"></i>
          	<% end %>
          	</h3>
  		</div>
		<div class="panel-body">
			
      		<p>Description: <%= truncate(task.description, length: 50) %></p>

      		<p>Deadline: <%= task.dead_line %></p>

      		<p><small>Tags: <%= raw task.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></small></p>
      	</div>
    </div>
<% end %>

