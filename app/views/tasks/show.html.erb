<h1 class="task_title"><%= @task.title %></h1>

<p class="task_sub_title">Description: <%= @task.description %></p>

<p>Deadline: <%= @task.dead_line %></p>
	
<p><small>Tags: <%= raw @task.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></small</p>

<br>
<br>

<div id="subtask_wrapper">
	<%= render @task.subtasks %>
	<div id="form">
		<%= render "subtasks/form" %>
	</div>
</div>

<div class="links">
	<%= link_to 'Edit', edit_task_path(@task) %> |
	<%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %> |
	<%= link_to 'Back', tasks_path %>
</div>
</div>
